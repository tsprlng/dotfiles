#!/bin/bash

exec 2>/dev/null

get() {
  xbacklight
}

notify() {
 pkill -KILL -f /usr/bin/i3status;
}

if [[ "$@" =~ up ]]; then
  xbacklight +3 -steps 1 -time 1
  notify
elif [[ "$@" =~ down ]]; then
  xbacklight -3 -steps 1 -time 1
  notify
elif [[ "$@" =~ notify ]]; then
  notify
else
  get
fi

exit 0
