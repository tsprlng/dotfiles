#!/bin/bash

exec >/dev/null 2>&1

if grep -q onboard <(xlsclients); then
	i3-msg '[class=Onboard] kill'
else
	i3-msg 'mark _kb_ret_; focus output eDP1; focus parent; focus parent; focus parent; focus parent; focus parent; focus parent; split vertical; append_layout ~/bin/_i3_onboard.layout; exec onboard; [con_mark="_kb_ret_"] focus; unmark _kb_ret_'
fi
