#!/bin/bash

amixer cget numid=14 | tail -n 1 | fgrep -q 'on'
is_headphone=$?

set -e

get() {
  if [[ "$*" =~ "-v" ]]; then
    echo "master  $(amixer -M sget Master Playback)"
    echo "headphn $(amixer -M sget Headphone Playback)"
    echo "speaker $(amixer -M sget Speaker Playback)"
    echo
  fi
  if [[ $is_headphone -eq 0 ]]; then
    stuff="$(amixer -M sget Headphone Playback)"
  else
    stuff="$(amixer -M sget Speaker Playback)"
  fi
  echo "$stuff" | egrep -o '[0-9]+%' -m 1
  if amixer sget Master Playback | fgrep -q '[off]'; then
    echo "Mute"
  fi
  echo "$stuff"
}

control=''
if [[ $is_headphone -eq 0 ]]; then
  control='Headphone'
else
  control='Speaker'
fi

if [[ "$@" =~ up ]]; then
  amixer -M set $control Playback 2%+
elif [[ "$@" =~ down ]]; then
  amixer -M set $control Playback 2%-
elif [[ "$@" =~ mute ]]; then
  amixer -M set Master Playback toggle
elif [[ "$@" =~ zero ]]; then
  amixer -M set $control Playback 0%
  amixer -M set Master Playback unmute
  amixer -M set Master Playback 100%
else
  get "$@"
fi

exit 0
